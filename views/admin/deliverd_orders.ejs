<%-include("navbar.ejs")%>

<div class="container card p-4">
    <h1 class="mb-4">Deliverd Orders</h1>

    <!-- Pending Orders Table -->
    <table class="table table-striped table-bordered">
      <thead class="table-dark ">
        <tr>
          <th scope="col" class="text-white">Sr. No</th>
          <th scope="col" class="text-white">Order ID</th>
          <th scope="col" class="text-white">Customer Name</th>
          <th scope="col" class="text-white">Order Date</th>
          <th scope="col" class="text-white">Order Amount</th>
          <th scope="col" class="text-white">Payment Status</th>
          <th scope="col" class="text-white">Action</th>
        </tr>
      </thead>
      <tbody>
       <% deliver_orders.map((row, i)=>{ %>
        <tr>
          <td><%-i+1%></td>
          <td><%-row.order_id%></td>
          <td><%-row.full_name%></td>
          <td><%-row.order_date%></td>
          <td>&#8377; <%-row.total%></td>
          <td>
            <% if (row.payment_status === 'Paid') { %>
                <span class="badge text-success"><%= row.payment_status %></span>
            <% } else { %>
                <span class="badge text-danger"><%= row.payment_status %></span>
            <% } %>   
          </td>
          <td>
            <a href="/admin/order_details/<%-row.order_id%>">
                <button class="btn btn-success btn-sm">Details</button>
            </a>
          </td>
         
        </tr>
        <% }) %>
      </tbody>
    </table>
  </div>



<%-include("footer.ejs")%>