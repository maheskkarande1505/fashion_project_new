
<%-include("navbar.ejs")%>


<div class="container card card-body">
    <div class="row">
        <div class="col-md-12">
            <h1>Add Product</h1>
            <form action="/admin/save_product" method="post" enctype="multipart/form-data">
                <div class="row">
                        
                    <!-- Product Name -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Name</label>
                        <input type="text" name="product_name" class="form-control" placeholder="Enter Product Name" required>
                    </div>

                    <!-- Product Price -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Price</label>
                        <input type="number" name="product_price" class="form-control" placeholder="Enter Product Price" required>
                    </div>

                    <!-- Product Purchase Price -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Purchase Price</label>
                        <input type="number" name="product_purchase_price" class="form-control" placeholder="Enter Product Purchase Price" required>
                    </div>

                    <!-- Product Brand-->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Brand </label>
                        <select name="product_brand_id" required class="form-select">
                            <option selected disabled value="">Select Brand</option>
                            <% brands.map((row,i)=>{ %>
                                <option value="<%-row.brand_id%>"><%-row.brand_name%></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Product Category -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Category </label>
                        <select name="product_category_id" required class="form-select">
                            <option selected disabled value="">Select category</option>
                            <% category.map((row,i)=>{ %>
                                <option value="<%-row.category_id%>"><%-row.category_name%></option>
                            <% }) %>
                        </select>
                    </div>

                    <!-- Product Type -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Type </label>
                        <select name="product_type" required class="form-select">
                            <option selected disabled value="">Select Product Type</option>
                            <option>Mens</option>
                            <option>Womens</option>  
                            <option>Kids</option>
                            <option>Others</option>
                        </select>
                    </div>

                    <!-- Product Details -->
                    <div class="col-md-12 mb-3">
                        <label class="label"> Product Details</label>
                        <textarea name="product_details" class="form-control" placeholder="Enter Product Details" rows="4" required></textarea>
                    </div>

                    <!-- Product Size -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Size</label>
                        <input type="text" name="product_size" class="form-control" placeholder="Enter Product Size">
                    </div>

                    <!-- Product Color -->
                    <div class="col-md-6 mb-3">
                        <label class="label"> Product Color</label>
                        <input type="color" name="product_color" class="form-control" placeholder="Enter Product Color">
                    </div>

                    <!-- Product Image 1 -->
                    <div class="col-md-6 mb-3">
                        <label class="label">Upload Product Image 1</label>
                        <input type="file" name="product_image1" class="form-control" required>
                    </div>

                    <!-- Product Image 2 -->
                    <div class="col-md-6 mb-3">
                        <label class="label">Upload Product Image 2</label>
                        <input type="file" name="product_image2" class="form-control">
                    </div>

                    <!-- Product Image 3 -->
                    <div class="col-md-6 mb-3">
                        <label class="label">Upload Product Image 3</label>
                        <input type="file" name="product_image3" class="form-control">
                    </div>

                    <!-- Product Image 4 -->
                    <div class="col-md-6 mb-3">
                        <label class="label">Upload Product Image 4</label>
                        <input type="file" name="product_image4" class="form-control">
                    </div>

                    <!-- Submit Button -->
                    <div class="col-md-12 mb-3 text-center">
                        <button type="submit" class="btn btn-primary">Save Product</button>
                    </div>
                
                </div>
            </form>
        </div>
    </div>
</div>


<%-include("footer.ejs")%>

